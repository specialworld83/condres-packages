pkgname=pushbullet
pkgrel=1
pkgver=8.15.0
_pkgver="v$pkgver"
pkgdesc="The missing Desktop application for Pushbullet"
url="https://github.com/sidneys/pb-for-desktop"
provides=('pushbullet')
arch=('i686' 'x86_64')
license=('MIT')
makedepends=('unzip')
depends=('libnotify' 'gconf' 'libappindicator-gtk2' 'libappindicator-gtk3' 'libxtst' 'nss')
source=("https://github.com/sidneys/pb-for-desktop/releases/download/${_pkgver}/pb-for-desktop_${pkgver}_amd64.deb")
sha256sums=('SKIP')

package() {
  msg2 "Extracting the data.tar.xz..."
  bsdtar -xf data.tar.xz -C "$pkgdir/"
}
